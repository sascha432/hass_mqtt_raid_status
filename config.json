{
    "default_config": {
        "info": "default configuration values",
        "defaults": {
            "sys": {
                "device_name": "$HOSTNAME",
                "mdadm_bin": "mdadm",
                "sudo": false
            },
            "hass": {
                "autoconf_topic": "homeassistant",
                "base_topic": "home",
                "availability_topic": "${base_topic}/${device_name}-check-raid/status"
            },
            "mqtt": {
                "version": 4,
                "port": 1883,
                "qos": 2,
                "transport": "tcp",
                "keepalive": 60,
                "username": null,
                "password": null
            },
            "devices": [
                {
                    "display_unit": "TB",
                    "display_decimal_places": 2
                }
            ]
        }
    },
    "mqtt": {
        "version": 5,
        "host": "192.168.0.40"
    },
    "devices": [
        {
            "mount_point": "/media/NAS/1",
            "raid_device": "/dev/md0"
        }
    ]
}
